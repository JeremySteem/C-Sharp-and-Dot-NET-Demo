<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" /> 
    <!-- Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Monoton&family=Rubik:wght@300;400;700&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <div class="header">
            <div class="flex">
                <img src="~/img/logo.jpg" alt="Logo Image" title="Go to Home" />
                <input type="search">
                <button class="toggle-btn">
                    <svg viewBox="0 0 100 80" width="40" height="40">
                        <rect width="100" height="20" rx="8"></rect>
                        <rect y="30" width="100" height="20" rx="8"></rect>
                        <rect y="60" width="100" height="20" rx="8"></rect>
                    </svg>
                </button>
            </div>
            <nav>
                <div>
                    <ul class="menu">
                        <li>
                            <a asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/Query">Query</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/CRUD">CRUD</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <p>Student Name: Jeremy Steem</p>
        <p>Scenario Title: A03 - Programs</p>
        &copy; 2022 - WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="js/main.js"></script>

</body>
</html>